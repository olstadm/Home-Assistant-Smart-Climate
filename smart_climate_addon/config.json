{
  "name": "Smart Climate Forecasting",
  "version": "1.0.2",
  "slug": "smart_climate",
  "description": "Advanced climate prediction and control using RC modeling with machine learning enhancement",
  "url": "https://github.com/olstadm/Home-Assistant-Smart-Climate",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "options": {
    "indoor_temperature_sensor": "sensor.indoor_temperature",
    "outdoor_temperature_sensor": "sensor.outdoor_temperature",
    "climate_entity": "climate.downstairs",
    "indoor_humidity_sensor": "",
    "outdoor_humidity_sensor": "",
    "learning_enabled": true,
    "forecast_hours": 12,
    "update_interval_minutes": 5,
    "comfort_max_temp": 80.0,
    "comfort_min_temp": 62.0,
    "accuweather_api_key": "",
    "accuweather_location_key": "",
    "ml_training_enabled": true,
    "ml_training_interval_hours": 1,
    "debug": false
  },
  "schema": {
    "indoor_temperature_sensor": "str",
    "outdoor_temperature_sensor": "str",
    "climate_entity": "str",
    "indoor_humidity_sensor": "str?",
    "outdoor_humidity_sensor": "str?",
    "learning_enabled": "bool",
    "forecast_hours": "int(1,24)",
    "update_interval_minutes": "int(1,60)",
    "comfort_max_temp": "float(60.0,90.0)",
    "comfort_min_temp": "float(50.0,80.0)",
    "accuweather_api_key": "str?",
    "accuweather_location_key": "str?",
    "ml_training_enabled": "bool",
    "ml_training_interval_hours": "int(1,24)",
    "debug": "bool"
  },
  "ports": {
    "8099": 8099
  },
  "ports_description": {
    "8099": "Smart Climate API port (optional)"
  },
  "documentation": "https://github.com/olstadm/Home-Assistant-Smart-Climate/blob/main/README.md",
  "helper_entities_supported": [
    "input_text.home_forecast",
    "input_text.accuweather_location_key", 
    "input_text.accuweather_token",
    "input_number.home_model_forecast_hours",
    "input_text.home_model_climate_entity",
    "input_text.home_model_outdoor_sensor",
    "input_text.home_model_indoor_sensor",
    "input_text.home_model_outdoor_humidity_entity",
    "input_text.home_model_indoor_humidity_entity",
    "input_number.home_model_tau_hours",
    "input_number.home_model_update_minutes",
    "input_number.home_model_forgetting_factor",
    "input_number.home_model_bias",
    "input_number.home_model_comfort_cap",
    "input_number.home_model_heat_min_f",
    "input_number.home_model_k_heat",
    "input_number.home_model_k_cool",
    "input_boolean.home_model_learning_enabled",
    "input_number.home_model_recommendation_cooldown",
    "input_text.home_model_storage"
  ],
  "map": [
    "share:rw"
  ],
  "environment": {
    "LOG_LEVEL": "info"
  },
  "services": [
    "mqtt:want"
  ],
  "hassio_api": true,
  "hassio_role": "default",
  "homeassistant_api": true,
  "host_network": false
}
